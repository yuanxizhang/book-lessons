<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for instructor do |f| %>
      <%= render 'shared/errors', object: instructor %>

      <%= f.label "Name: " %>
      <%= f.text_field :name %><br>
      <%= f.label "Bio: " %>
      <%= f.text_area :bio, size: "60x12" %><br>
      <%= f.label "Class Time: " %>
      <%= f.text_field :class_time %><br>
      <%= f.label "Add a picture: " %>
      <%= f.file_field :picture, id: :instructor_picture %><br>
      <%= f.hidden_field :picture_cache %>

      <%= f.submit "Submit", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
