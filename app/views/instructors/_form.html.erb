<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for instructor do |f| %>

      <%= f.label "Name: " %>
      <%= f.text_field :name %><br>
      <%= f.label "Bio: " %>
      <%= f.text_area :bio, size: "60x12" %><br>
      <%= f.label "Class Time: " %>
      <%= f.text_field :class_time %><br>

      <%= f.submit "Submit", class: 'btn btn-info' %>
    <% end %>
  </div>
</div>
