<h3>Add a new skill in section: <%= @section.name %></h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@section, @skill] do |f| %>
      <%= render 'shared/errors', object: @skill %>
      <%= f.hidden_field :section_id, :value => @section.id %>
      <%= f.label "Name: " %>
      <%= f.text_field :name %><br>
      <%= f.submit "Submit", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
