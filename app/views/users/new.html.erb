<% provide(:title, 'Sign up') %>

<h2 class="col-md-6 col-md-offset-5">Sign Up</h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@user) do |f| %>
      <%= render 'shared/errors', object: @user %>

      <%= f.label :email %><br>
      <%= f.email_field :email, class: 'form-control' %><br>

      <%= f.label :password %><br>
      <%= f.password_field :password, class: 'form-control' %><br>

      <%= f.label :password_confirmation, "Confirmation" %><br>
      <%= f.password_field :password_confirmation, class: 'form-control' %><br>

      <br>
      <%= f.submit "Sign up", class: "btn btn-primary col-md-6 col-md-offset-3" %>
    <% end %>
  </div>
</div>
